@model CSHTGT.Data.Models.File

@{
    ViewData["Title"] = "Edit";
}

<h2 style="justify-content: center; justify-items: center; display: grid; margin: 20px;">Chỉnh sửa thủ tục, biểu mẫu</h2>
<hr />
<div class="row mx-auto" style="justify-content: center; justify-items: center;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="MaPhieuThuTuc" class="control-label"></label>
                <select asp-for="MaPhieuThuTuc" class="form-control" asp-items="ViewBag.MaPhieuThuTuc"></select>
                <span asp-validation-for="MaPhieuThuTuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenFile" class="control-label"></label>
                <input asp-for="TenFile" class="form-control" />
                <span asp-validation-for="TenFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkFile" class="control-label"></label>
                <input asp-for="LinkFile" class="form-control" />
                <span asp-validation-for="LinkFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style=" display: flex; justify-content: center;">
    <a asp-action="Index">Back to List</a>
</div>

