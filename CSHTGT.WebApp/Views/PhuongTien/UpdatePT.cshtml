@model CSHTGT.ViewModels.PhuongTienUpdateViewModel

@{
    ViewData["Title"] = "UpdatePT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" container-fluid">
<h1 class="mt-4">Cập nhật phương tiện</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdatePT">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TenPT" class="control-label">Nhập tên phương tiện</label>
                <input asp-for="TenPT" class="form-control" />
                <span asp-validation-for="TenPT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BienSo" class="control-label">Nhập biển số</label>
                <input asp-for="BienSo" class="form-control" />
                <span asp-validation-for="BienSo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NhanHieu" class="control-label">Nhập nhãn hiệu</label>
                <input asp-for="NhanHieu" class="form-control" />
                <span asp-validation-for="NhanHieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoChoNgoi" class="control-label">Nhập số chỗ ngồi</label>
                <input asp-for="SoChoNgoi" class="form-control" />
                <span asp-validation-for="SoChoNgoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoKhung" class="control-label">Nhập số khung</label>
                <input asp-for="SoKhung" class="form-control" />
                <span asp-validation-for="SoKhung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoMay" class="control-label">Nhập số máy</label>
                <input asp-for="SoMay" class="form-control" />
                <span asp-validation-for="SoMay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaiTrong" class="control-label">Tải trọng</label>
                <input asp-for="TaiTrong" class="form-control" />
                <span asp-validation-for="TaiTrong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label">Nhập trạng thái</label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="MaLoaiPhuongTien" class="control-label">Loại phương tiện</label>
            <select name="MaLoaiPhuongTien" asp-items="@ViewBag.MaLoaiPhuongTien" class="form-control">

            </select>
        </div>
            @*<div class="form-group">
                <label asp-for="MaLoaiPhuongTien" class="control-label"></label>
                <input asp-for="MaLoaiPhuongTien" class="form-control" />
                <span asp-validation-for="MaLoaiPhuongTien" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>


