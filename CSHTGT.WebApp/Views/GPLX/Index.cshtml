@model IEnumerable<CSHTGT.ViewModels.GPLXViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" container-fluid">
    <h1 class="mt-4">Danh sách GPLX</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách GPLX</li>
    </ol>
    <p>
        <a asp-action="AddGPLX">Tạo mới</a>
    </p>
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        Họ tên
                    </th>
                    <th>
                       Địa chỉ
                    </th>
                    <th>
                        CMND
                    </th>
                    <th>
                        Hãng
                    </th>
                    <th>
                        Ngày tạo
                    </th>
                    <th>
                        Ngày hết hạn
                    </th>
                    <th>
                        Số GPLX
                    </th>
                    <th>
                        Trạng thái
                    </th>
                    <th>
                        Mã đơn vị
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaChi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CMND)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hang)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayTao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayHetHan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoGPLX)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrangThai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaDonVi)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditGPLX", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "DeleteGPLX", new { id = item.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>