@model IEnumerable<CSHTGT.ViewModels.CanBoViewModel>

@{
    ViewData["Title"] = "Danh Sách Cán Bộ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class=" container-fluid">
        <h1 class="mt-4">Quản lý Cán bộ</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/Home">Trang chủ</a></li>
            <li class="breadcrumb-item active">Danh sách Cán bộ</li>
        </ol>
        <p>
            <a asp-action="AddCanBo">Thêm cán bộ</a>
        </p>
        <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        Mã cán bộ
                    </th>
                    <th>
                        Mã đơn vị
                    </th>
                    <th>
                        Họ tên
                    </th>
                    <th>
                        CMND
                    </th>
                    <th>
                        Địa chỉ
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Ngày sinh
                    </th>
                    <th>
                        Số điện thoại
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDCanBo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaDonVi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CMND)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaChi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgaySinh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SDT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.IDCanBo }) |
                            @Html.ActionLink("Xóa", "DeleteCB", new { id = item.IDCanBo })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
     </div>
</div>
